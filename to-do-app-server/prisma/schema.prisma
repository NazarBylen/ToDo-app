datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  VIEWER
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  ownedLists   TodoList[]    @relation("UserOwnedLists")
  participants Participant[]
}

model TodoList {
  id           Int           @id @default(autoincrement())
  title        String
  ownerId      Int
  owner        User          @relation("UserOwnedLists", fields: [ownerId], references: [id])
  tasks        Task[]
  participants Participant[]
  createdAt    DateTime      @default(now())
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  done        Boolean  @default(false)
  listId      Int
  list        TodoList @relation(fields: [listId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Participant {
  id     Int      @id @default(autoincrement())
  userId Int
  listId Int
  role   Role     @default(VIEWER)
  user   User     @relation(fields: [userId], references: [id])
  list   TodoList @relation(fields: [listId], references: [id])

  @@unique([userId, listId])
}
